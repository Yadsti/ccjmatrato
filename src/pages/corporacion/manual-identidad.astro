    <main class="container mx-auto px-4 py-8 sm:py-12 font-sans">
        
        <MarcaHero manualUrl={manualUrl} />

        <MarcaElementos />

        <MarcaVersiones />

        <MarcaUsosRestricciones />

        <MarcaContacto />
        
    </main>
</Layout>