---
import Layout from "../../layouts/Layout.astro";
import { fetchGraphQL } from "../../lib/wp.ts";
import { InformacionAcuerdosyActas } from "../../lib/queries/acuerdosyactas.ts"; 

const title = "Actas y Acuerdos";
const description = "Consulte y descargue las actas de sesiones y acuerdos municipales aprobados por el Concejo Municipal del Medio Atrato.";
const data = await fetchGraphQL(InformacionAcuerdosyActas);

const acuerdosList = data?.acuerdos?.nodes?.map((node) => {
    const acuerdo = node.datosDeAcuerdos;
    return {
        id: acuerdo.numeroDeAcuerdo,
        title: acuerdo.tituloDeAcuerdo,
        summary: acuerdo.resumenDelAcuerdo,
        date: acuerdo.fechaDeAcuerdo,
        url: acuerdo.documentoDeSoporte?.node?.mediaItemUrl || "#",
        displayTitle: `Acuerdo No. ${acuerdo.numeroDeAcuerdo}`,
    };
}) || [];

const actasList = data?.actas?.nodes?.map((node) => {
    const acta = node.datosDeActas;
    return {
        id: acta.numeroDeActa,
        summary: acta.resumenDeActa,
        date: acta.fechaDeDocumento,
        url: acta.documentoPdf?.node?.mediaItemUrl || "#",
        displayTitle: `Acta No. ${acta.numeroDeActa}`,
    };
}) || [];
---

<Layout title={title} description={description}>

    <main class="container mx-auto px-4 py-8 font-sans">
        <h1 class="text-4xl font-bold text-center text-concejo-verde-principal mb-8">
            Actas y Acuerdos
        </h1>
        <p class="text-lg text-gray-700 text-center mb-10 max-w-3xl mx-auto">
            Revise y descargue los documentos oficiales que recogen las decisiones y el registro de las sesiones de la Corporación Concejo Municipal.
        </p>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
            
            <section aria-labelledby="acuerdos-titulo" class="bg-white rounded-xl shadow-xl border-t-4 border-concejo-azul-principal">
                <h2 id="acuerdos-titulo" class="p-5 text-2xl font-extrabold text-concejo-negro flex items-center">
                    Acuerdos Municipales
                </h2>
                
                <div class="p-5 pt-0">
                    {acuerdosList.length > 0 ? (
                        <ul class="space-y-3 divide-y divide-gray-100">
                            {acuerdosList.map((acuerdo) => (
                                <li class="pt-3">
                                    <a href={acuerdo.url} target="_blank" rel="noopener noreferrer" class="group block p-2 hover:bg-gray-50 rounded-md transition-colors">
                                        <p class="text-xs font-semibold text-concejo-verde-principal">{acuerdo.displayTitle} - {acuerdo.date}</p>
                                        <h4 class="text-base font-bold text-concejo-negro group-hover:underline">{acuerdo.title}</h4>
                                        <p class="text-sm text-gray-700 mt-1 line-clamp-2">{acuerdo.summary}</p>
                                        <span class="text-sm font-semibold text-concejo-azul-principal mt-1 block">Descargar PDF</span>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    ) : (
                        <div class="p-8 text-center text-gray-500 bg-gray-50 rounded-lg border border-gray-200">
                            <i class="fas fa-file-alt text-4xl mb-3"></i>
                            <p>No hay Acuerdos municipales publicados todavía.</p>
                        </div>
                    )}
                </div>
            </section>

            <section aria-labelledby="actas-titulo" class="bg-white rounded-xl shadow-xl border-t-4 border-concejo-verde-principal">
                <h2 id="actas-titulo" class="p-5 text-2xl font-extrabold text-concejo-negro flex items-center">
                    Actas de Sesiones
                </h2>
                
                <div class="p-5 pt-0">
                    {actasList.length > 0 ? (
                        <ul class="space-y-3 divide-y divide-gray-100">
                            {actasList.map((acta) => (
                                <li class="pt-3">
                                    <a href={acta.url} target="_blank" rel="noopener noreferrer" class="group block p-2 hover:bg-gray-50 rounded-md transition-colors">
                                        <p class="text-xs font-semibold text-concejo-verde-principal">{acta.displayTitle} - {acta.date}</p>
                                        <p class="text-base font-bold text-concejo-negro group-hover:underline line-clamp-2">{acta.summary || 'Resumen no disponible'}</p>
                                        <span class="text-sm font-semibold text-concejo-azul-principal mt-1 block">Descargar PDF</span>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    ) : (
                        <div class="p-8 text-center text-gray-500 bg-gray-50 rounded-lg border border-gray-200">
                            <i class="fas fa-calendar-check text-4xl mb-3"></i>
                            <p>No hay Actas de sesiones publicadas todavía.</p>
                        </div>
                    )}
                </div>
            </section>
        </div>
    </main>
</Layout>