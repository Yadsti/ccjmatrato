---
export interface Props {
    title: string;
    links: { href: string; label: string; }[];
}

const { title, links } = Astro.props;
---

<div class="space-y-4 text-center md:text-left pt-2">
    <h3
        class="text-lg font-bold text-concejo-verde-principal tracking-wider"
    >
        {title}
    </h3>
    <ul class="space-y-1 font-medium text-sm">
        {
            links.map((link) => (
            <li>
                <a
                    href={link.href}
                    class="hover:text-concejo-azul-principal transition-colors"
                >
                    {link.label}
                </a>
            </li>
            ))
        }
    </ul>
</div>