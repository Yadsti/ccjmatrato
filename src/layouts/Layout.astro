        ],
    },
    // ... Asegúrate de que todos los 13 concejales estén distribuidos ...
};

            function openModal(concejalId) {
                const data = concejalesData[concejalId];
                const modalBackdrop = document.getElementById('modal-backdrop');
                const modalContent = document.getElementById('modal-content');

                if (!data) return;

                const academicList = data.perfilAcademico.map(item => `<li class="text-gray-700">${item}</li>`).join('');
                const professionalList = data.perfilProfesional.map(item => `<li class="text-gray-700">${item}</li>`).join('');

                modalContent.innerHTML = `
                    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
                        <div class="md:col-span-2 text-center md:text-left">
                            <img src="${data.foto}" alt="Foto de ${data.nombre}" class="w-40 h-40 mx-auto md:mx-0 rounded-full object-cover shadow-lg border-4 border-concejo-verde-principal mb-4">
                            <h2 class="text-3xl font-extrabold text-concejo-negro">${data.nombre}</h2>
                            <p class="text-lg font-semibold text-concejo-azul-principal">${data.cargo}</p>
                            <div class="flex justify-center md:justify-start space-x-3 mt-3">
                                <a href="${data.twitter}" class="text-concejo-azul-principal hover:text-concejo-verde-principal"><i class="fab fa-twitter"></i></a>
                                <a href="${data.facebook}" class="text-concejo-azul-principal hover:text-concejo-verde-principal"><i class="fab fa-facebook-f"></i></a>
                                <a href="${data.instagram}" class="text-concejo-azul-principal hover:text-concejo-verde-principal"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="md:col-span-3 space-y-6">
                            <div>
                                <h3 class="text-xl font-bold text-concejo-negro flex items-center mb-2 border-b-2 border-concejo-verde-claro pb-1">Perfil académico</h3>
                                <ul class="list-disc list-inside space-y-1">${academicList}</ul>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-concejo-negro flex items-center mb-2 border-b-2 border-concejo-verde-claro pb-1">Perfil profesional</h3>
                                <ul class="list-disc list-inside space-y-1">${professionalList}</ul>
                            </div>
                        </div>
                    </div>
                `;
                modalBackdrop.classList.remove('hidden');
                modalBackdrop.classList.add('flex');
            }

            function closeModal() {
                const modalBackdrop = document.getElementById('modal-backdrop');
                modalBackdrop.classList.add('hidden');
                modalBackdrop.classList.remove('flex');
            }
        </script>
        
                <slot />
        
