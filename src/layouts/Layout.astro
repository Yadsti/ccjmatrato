                'concejal-12': { nombre: 'Concejal Número Doce', cargo: 'Concejal', foto: '/concejales/concejal12.jpg', perfilAcademico: ['Estudios en [Área]'], perfilProfesional: ['Experiencia en [Sector]'], twitter: '#', facebook: '#', instagram: '#' },
                'concejal-13': { nombre: 'Concejal Número Trece', cargo: 'Concejal', foto: '/concejales/concejal13.jpg', perfilAcademico: ['Estudios en [Área]'], perfilProfesional: ['Experiencia en [Sector]'], twitter: '#', facebook: '#', instagram: '#' },
