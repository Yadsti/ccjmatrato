---
    import { Image } from "astro:assets";
    import { fetchGraphQL } from "../lib/wp";
    import { InformacionGlobal } from "../lib/queries/global.ts";
    import LogoConcejo from "../assets/logo3_concejo_medioatrato.png";

    const data = await fetchGraphQL(InformacionGlobal);
    const datos = data?.allInformacionGlobal?.edges?.[0]?.node?.datosGlobales;
    const telefono = datos?.telefono || "3117539517";
    const email = datos?.email || "concejomedioatrato@hotmail.com";
    const nombreDesarrollador = "EbanoCompany";
    const urlDesarrollador = "https://www.ebanocompany.com/";

    const navegacionPrincipal = [
    { href: "/", label: "Inicio" },
    { href: "/corporacion/acerca-de", label: "Corporación" },
    { href: "/transparencia/", label: "Transparencia" },
    { href: "/atencion/contacto", label: "Atención al Ciudadano" },
    ];

    const enlacesInteres = [
    { href: "/transparencia/normativa", label: "Reglamento Interno" },
    { href: "/atencion/pqrsd", label: "PQRSD" },
    { href: `mailto:${email}`, label: "Correo Corporativo" },
    { href: "/transparencia/privacidad", label: "Política de Privacidad" },
    { href: "/transparencia/terminos", label: "Términos y Condiciones" },
    ];
---

<footer class="bg-gray-100 text-gray-800 pt-12 pb-4 font-sans border-t border-gray-300">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">

        <div
        class="grid grid-cols-1 gap-10 md:grid-cols-4 md:gap-8 justify-items-center md:justify-items-start"
        >
        <div
            class="flex flex-col items-center md:items-start text-center md:text-left space-y-4 max-w-xs"
        >
            <a href="/">
            <Image
                src={LogoConcejo}
                alt="Logo Concejo Municipal Medio Atrato"
                width={120}
                height={120}
                class="h-20 w-auto"
            />
            </a>
            <p class="text-sm text-gray-600">
            Trabajando por la transparencia y el desarrollo sostenible del Medio
            Atrato.
            </p>
            <ul class="mt-8 flex justify-center gap-6 sm:justify-start md:gap-8">
            <li>
                <a
                href="#"
                rel="noreferrer"
                target="_blank"
                class="text-teal-700 transition hover:text-teal-700/75"
                >
                <span class="sr-only">Facebook</span>
                <svg
                    class="size-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                    fill-rule="evenodd"
                    d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                    clip-rule="evenodd"></path>
                </svg>
                </a>
            </li>
            <li>
                <a
                href="#"
                rel="noreferrer"
                target="_blank"
                class="text-teal-700 transition hover:text-teal-700/75"
                >
                <span class="sr-only">Instagram</span>
                <svg
                    class="size-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                    fill-rule="evenodd"
                    d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                    clip-rule="evenodd"></path>
                </svg>
                </a>
            </li>

            <li>
                <a
                href="#"
                rel="noreferrer"
                target="_blank"
                class="text-teal-700 transition hover:text-teal-700/75"
                >
                <span class="sr-only">X</span>
                <svg
                    class="size-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                    d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                    ></path>
                </svg>
                </a>
            </li>
            </ul>
        </div>

        <div class="space-y-4 text-center md:text-left pt-2">
            <h3
            class="text-lg font-bold text-concejo-verde-principal tracking-wider"
            >
            Horario y contacto
            </h3>

            <ul class="space-y-1 text-sm leading-relaxed">
            <li class="font-bold">Lunes a Vueves:</li>
            <li>7:00 a.m. - 12:00 p.m.</li>
            <li>2:00 p.m. - 5:00 p.m.</li>
            <p>
                Teléfono:
                <a href={`tel:${telefono}`} class="hover:text-concejo-azul-principal">{telefono}</a>
            </p>
            <p>
                Email: <a
                href={`mailto:${email}`}
                class="hover:text-concejo-azul-principal">{email}</a
                >
            </p>
            </ul>

            <div class="mt-4 space-y-1 text-sm"></div>
        </div>

        <div class="space-y-4 text-center md:text-left pt-2">
            <h3
            class="text-lg font-bold text-concejo-verde-principal tracking-wider"
            >
            Navega
            </h3>
            <ul class="space-y-1 font-medium text-sm">
            {
                navegacionPrincipal.map((link) => (
                <li>
                    <a
                    href={link.href}
                    class="hover:text-concejo-azul-principal transition-colors"
                    >
                    {link.label}
                    </a>
                </li>
                ))
            }
            </ul>
        </div>

        {/* COLUMNA 4: DOCUMENTOS Y LEYES (Enlaces Secundarios) */}
        <div class="space-y-4 text-center md:text-left pt-2">
            <h3
            class="text-lg font-bold text-concejo-verde-principal tracking-wider"
            >
            Enlaces de interes
            </h3>
            <ul class="space-y-1 font-medium text-sm">
            {
                enlacesInteres.map((link) => (
                <li>
                    <a
                    href={link.href}
                    class="hover:text-concejo-azul-principal transition-colors"
                    >
                    {link.label}
                    </a>
                </li>
                ))
            }
            </ul>
        </div>
        </div>

        {/* PIE DE PÁGINA INFERIOR (Derechos de autor) */}
        <hr class="border-t border-gray-300 my-8" />
        <div class="text-center text-xs space-y-1 text-gray-600">
        <p>
            &copy; {new Date().getFullYear()} Concejo Municipal Medio Atrato. Todos los
            derechos reservados.
        </p>
        <p>
            Desarrollado por <a
            href={urlDesarrollador}
            target="_blank"
            rel="noopener noreferrer"
            class="text-concejo-azul-principal hover:underline"
            >{nombreDesarrollador}</a
            >
        </p>
        </div>
    </div>
</footer>
